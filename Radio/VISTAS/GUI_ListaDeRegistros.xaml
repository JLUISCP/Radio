<Window x:Class="Radio.VISTAS.GUI_ListaDeRegistros"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Radio.VISTAS"
        mc:Ignorable="d"
        Title="GUI_ListaDeRegistros" Height="450" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <TextBox x:Name="tb_Buscar" HorizontalAlignment="Left" Margin="29,17,0,0" TextWrapping="Wrap" VerticalAlignment="Top" 
                 Width="150" FontSize="18"/>
        <Button x:Name="btn_Buscar" Content="Buscar" HorizontalAlignment="Left" Margin="184,15,0,0" VerticalAlignment="Top" FontSize="18" Click="clicBuscar"/>
        <DataGrid x:Name="dg_Registros" HorizontalAlignment="Left" Margin="29,55,0,0" VerticalAlignment="Top" 
                  SelectionMode="Single" IsReadOnly="True" CanUserAddRows="False" CanUserDeleteRows="False" CanUserReorderColumns="False" 
                  CanUserSortColumns="False" ColumnWidth="*" MouseDoubleClick="seleccionarFila" Width="241" Height="318"/>
    </Grid>
</Window>
